---
import { Image } from "astro:assets";
import type { ResumeItem } from "../types/config";

type Props = ResumeItem;

const { title, company, date } = Astro.props;
---

<a
  href={company.url}
  class="py-3 flex items-center justify-between  hover:opacity-60 transition-opacity duration-300"
>
  <div class="flex items-center gap-4">
    <Image
      src={company.image}
      alt={company.name}
      width={40}
      height={40}
      class="rounded-full w-[40px] h-[40px] object-cover"
    />
    <div>
      <h3 class="font-medium">{title}</h3>
      <p class="text-sm opacity-60">{company.name}</p>
    </div>
  </div>
  <p class="text-sm opacity-60">{date}</p>
</a>
